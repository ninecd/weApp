swiper {
  width: 100%;
  height: 800rpx;
}
swiper image {
  width: 100%;
  height: 800rpx;
}

.con_one {
  width: 100%;
  line-height: 44rpx;
  margin-top: 12rpx;
  padding-left: 15rpx;
  position: relative;
}
.con_one::after {
  content: "";
  width: 5rpx;
  height: 30rpx;
  background: gray;
  position: absolute;
  top: 7rpx;
  left: 0;
}
.con_one_title {
  height: 100%;
  font-size: 28rpx;
  text-align: left;
}
.con_one_box {
  width: 100%;
  height: 200rpx;
  margin-bottom: 24rpx;
}
.con_one_box image {
  width: 160rpx;
  height: 100%;
  margin-right: 26rpx;
  float: left;
}
.con_one_box_right{
  height: 26rpx;
  float: left;
  font-size: 26rpx;
  line-height: 26rpx;
}