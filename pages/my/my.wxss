/* pages/my/my.wxss */
page{
  width: 100%;
  height: 100vh;
  background: rgba(242,242,242,1);
}
.my_top{
  width: 100%;
  height: 350rpx;
  background: linear-gradient(to right, rgb(255,132,1),rgb(255,86,1) 100%);
  color: #fff;
  padding-top: 50rpx;
  position: relative;
}
.my_top_title {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 0 24rpx;
}
.title_img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  float: left;
}
.my_top_title_center{
  padding-left: 120rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.my_setting {
  float: right;
}
.my_family {
  width: 198rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 20rpx;
  color: rgba(255,255,255,0.9);
  background: rgba(0,0,0,0.14);
  border-radius: 56rpx;
  margin-top: 16rpx;
}


.my_top_features {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  margin-top: 36rpx;
  padding: 0 36rpx;
}
.my_top_features_one {
  width: calc(100% / 4);
  height: 100%;
  line-height: 50rpx;
  text-align: center;
  float: left;
  font-size: 24rpx;
}
.integral {
  width: calc(100% - 48rpx);
  height: 150rpx;
  background: #fff;
  position: absolute;
  bottom: -75rpx;
  left: 24rpx;
  border-radius: 26rpx;
}